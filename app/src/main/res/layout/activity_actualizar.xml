<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Título -->
    <TextView
        android:id="@+id/tvActualizarTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Producto"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

    <!-- Spinner de productos -->
    <Spinner
        android:id="@+id/spinnerProductos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/tvActualizarTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ID del producto -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="ID del producto"
        app:layout_constraintTop_toBottomOf="@id/spinnerProductos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nuevo nombre -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNombreA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nuevo nombre"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tilId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNombreA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nuevo precio -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPrecioA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nuevo precio"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tilNombreA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPrecioA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nueva cantidad -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCantidadA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nueva cantidad"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tilPrecioA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtCantidadA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="12dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón Actualizar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnActualizar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:textAllCaps="false"
        android:backgroundTint="#6200EE"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tilCantidadA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Regresar al menú -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegresar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Regresar al Menú"
        android:textAllCaps="false"
        android:backgroundTint="#03DAC5"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnActualizar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
